% Compile Nitrogen Files.
{ './src/*', [
	{ i, "./include" },
	{ outdir, "./ebin" }
]}.

{ './src/*/*', [
	{ i, "./include" },
	{ outdir, "./ebin" }
]}.

{ './src/*/*/*', [
	{ i, "./include" },
	{ outdir, "./ebin" }
]}.

% Compile the Nitrogen test files
{ './test/src/*', [
	{ i, "./include" },
	{ outdir, "./test/ebin" }
]}.

{ './test/src/*/*', [
	{ i, "./include" },
	{ outdir, "./test/ebin" }
]}.

{ './test/src/*/*/*', [
	{ i, "./include" },
	{ outdir, "./test/ebin" }
]}.
